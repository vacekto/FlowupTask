{
    "tasks": {
        "dev": "denon run --allow-net --allow-env  --allow-read --allow-sys --unstable src/main.ts",
        "prod": "deno run --allow-net --allow-env --allow-read --allow-sys --unstable src/main.ts"
    },
    "importMap": "./import_map.json",
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "noImplicitAny": false
    },
    "lint": {
        "include": [
            "src/"
        ],
        "rules": {
            "tags": [
                "recommended"
            ],
            "include": [
                "ban-untagged-todo"
            ],
            "exclude": [
                "no-unused-vars",
                "no-explicit-any"
            ]
        }
    },
    "fmt": {
        "useTabs": true,
        "lineWidth": 80,
        "indentWidth": 2,
        "semiColons": true,
        "proseWrap": "preserve",
        "include": [
            "src/"
        ]
    }
}